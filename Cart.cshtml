@model SimpleShoppingWebsite.Models.Cart

<h2>Your Cart</h2>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>
                @item.Product.Name - @item.Quantity x $@item.Product.Price
                <a href="@Url.Action("RemoveFromCart", new { productId = item.Product.Id })">Remove</a>
            </li>
        }
    </ul>

    <h3>Total: $@Model.TotalAmount</h3>
    <a href="@Url.Action("Checkout")">Proceed to Checkout</a>
}
